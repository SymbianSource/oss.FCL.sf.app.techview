		{
		MENU_ITEM { command=ENslookupStart; txt="Start"; },
		MENU_ITEM { command=ENslookupStop; txt="Stop"; },
		MENU_ITEM { command=ENslookupReset; txt="Reset Screen"; },
		MENU_ITEM { command=ENslookupAbout; txt="About..."; }
        };
    }

